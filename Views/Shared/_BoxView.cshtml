@model dotnetApp.Models.BoxViewModel
@{
    ViewData["Title"] = Model;
}
<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .box {
        width: 250px;
        height: 250px;
        border: 2px solid #000;
        margin: 0 20px;
        padding: 10px;
        overflow-y: auto;
    }
</style>
<input hidden value=@Model.Value id="hiddenValue" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <span class="text-center" id="leftTitle" style="white-space: nowrap; padding-left: 30px;"></span>
            <div class="box" id="box1">
                <ul id="leftList" class="list-group">
                    
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <span class="text-center" id="rightTitle" style="white-space: nowrap; padding-left: 30px;"></span>
            <div class="box" id="box2">
                <ul id="rightList" class="list-group">
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="row" id="errorDiv"></div>
</div>





